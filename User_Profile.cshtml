 <h2>Welcome <span style="color:red">@ViewBag.name</span> <label style="margin-left:600px"><a href="~/Home/Logout">Logoff</a></label></h2>
         <hr />
<html>
    <head>
        <title></title>
        <style type="text/css">
            body {margin:0px;
            }
            #container {height:600px;width:1200px;background-color:gray;
            }
            #container-left {height:600px;width:300px;background-color:yellow;float:left;
            }
            #container-right {height:600px;width:900px;background-color:white;float:left;
            }
            #side_menu {
                margin:0px;padding:30px;
            }
            #side_menu>li {list-style:none;padding:6px 25px;border-bottom:groove;
            }
                #side_menu > li > a {text-decoration:none;
                }
                #side_menu > li > a:hover {text-decoration:underline;text-decoration-color:red;
                }
                                           #top_menu {
                margin:0px;padding:10px;
            }
              #top_menu>li {list-style:none;padding:6px 25px;border-bottom:groove;display:inline-block;
            }
                #top_menu > li > a {text-decoration:none;
                }
                #top_menu > li > a:hover {text-decoration:underline;text-decoration-color:red;
                }
        </style>
    </head>
    <body>
        <div id="container">
            <div id="container-left">
                        <ul id="side_menu">
                            <li><a href="~/Home/Compose">Compose</a></li>
                            <li><a href="~/Home/User_Profile">Inbox (@ViewBag.Count)</a></li>
                            <li><a href="~/Home/Sent">Sent</a></li>
                            <li><a href="~/Home/Draft">Draft</a></li>
                            <li><a href="~/Home/Trash">Trash</a></li>
                        </ul>
            </div>
            <div id="container-right">
                <ul id="top_menu">
                            <li><a href="~/Home/User_Profile">Primary</a></li>
                            <li><a href="~/Home/User_Profile">Social</a></li>
                            <li><a href="~/Home/User_Profile">Promotional</a></li>
                        </ul>
                <table border="0" style="width:100%;text-align:center;">
                            <tr style="background-color:blue;color:white;"><td></td><td>Sender</td><td>SUbject</td><td>Date & Time</td><td>Action</td></tr>
                      @foreach (var p in ViewBag.List)
                      {
                           <tr><td><input type="checkbox" /></td><td>@p.Sender</td><td>@p.Subject</td><td>@p.CrDate</td><td>@Html.ActionLink("Read", "Read", new { id=p.Id,num=1})</td></tr>
                     
                      }
                       </table>
            </div>
        </div>
    </body>
</html>